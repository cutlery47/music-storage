        "/api/v1/songs": {
            "get": {
                "description": "Get songs by specified filters",
                "tags": [
                    "Songs"
                ],
                "summary": "Get Songs",
                "parameters": [
                    {
                        "type": "string",
                        "description": "desired group",
                        "name": "group",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "desired song",
                        "name": "song",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "upper time-bound for when the song was released",
                        "name": "releasedBefore",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "lower time-bound for when the song was released",
                        "name": "releasedAfter",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "description": "pagination limit",
                        "name": "limit",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "integer",
                        "description": "pagination offset",
                        "name": "offset",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/models.SongWithDetail"
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/echo.HTTPError"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/echo.HTTPError"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/echo.HTTPError"
                        }
                    }
                }
            },
            "put": {
                "description": "Upload specific song data",
                "tags": [
                    "Songs"
                ],
                "summary": "Update Song",
                "parameters": [
                    {
                        "type": "string",
                        "description": "initial group",
                        "name": "group",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "initial song",
                        "name": "song",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "edited group",
                        "name": "group",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "edited song",
                        "name": "song",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "edited release date",
                        "name": "releaseDate",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "edited link to some media",
                        "name": "link",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "edited song lyrics",
                        "name": "text",
                        "in": "formData",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/echo.HTTPError"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/echo.HTTPError"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/echo.HTTPError"
                        }
                    }
                }
            },
            "post": {
                "description": "Upload a new song",
                "tags": [
                    "Songs"
                ],
                "summary": "Upload Song",
                "parameters": [
                    {
                        "type": "string",
                        "description": "desired group",
                        "name": "group",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "desired song",
                        "name": "song",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "song release date",
                        "name": "releaseDate",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "link to some media",
                        "name": "link",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "song lyrics",
                        "name": "text",
                        "in": "formData",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
